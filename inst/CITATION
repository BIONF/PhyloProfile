         title        = "{PhyloProfile}: Dynamic visualization and exploration of multi-layered phylogenetic profiles",
         author       = personList(as.person("Ngoc Vinh Tran"),
                                   as.person("Bastian Greshake Tzovaras"),
                                   as.person("Ingo Ebersberger")),
         journal      = "Bioinformatics",
         volume       = "34(17)",
         pages        = "3041–3043",
         year         = "2018",
         url          = "https://doi.org/10.1093/bioinformatics/bty225",

         textVersion  =
           paste("Ngoc-Vinh Tran, Bastian Greshake Tzovaras, Ingo Ebersberger;",
                 "PhyloProfile: Dynamic visualization and exploration of multi-layered phylogenetic profiles,",
                 "Bioinformatics, Volume 34, Issue 17, 01 September 2018, Pages 3041–3043",
                 "https://doi.org/10.1093/bioinformatics/bty225")
)
